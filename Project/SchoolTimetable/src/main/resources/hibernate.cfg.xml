<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:test.db</property>
        <property name="connection.username">test</property> <!-- User DataBase -->
        <property name="connection.password">test</property> <!-- Password DataBase -->

        <!-- SQL Dialect -->
        <property name="dialect">org.sqlite.hibernate.dialect.SQLiteDialect</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>

        <!-- Show SQL in console -->
        <property name="show_sql">false</property>

        <!-- Show  formatted SQL -->
        <property name="format_sql">true</property>

        <mapping class="org.example.Message"/>
        <mapping class="org.example.MessageTest"/>
        <mapping class="org.example.Calculator"/>
        <mapping class="org.example.CalculatorTest"/>

    </session-factory>
</hibernate-configuration>